<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="finwise.maui.Views.AddExpensePage"
             Title="AddExpensePage"
             Shell.TabBarIsVisible="False"
             Shell.PresentationMode="ModalAnimated">

    <VerticalStackLayout>
        <Grid RowDefinitions="45,*,auto" ColumnDefinitions="50,*,50">

            <BoxView Grid.Row="0" Grid.ColumnSpan="3" Color="{AppThemeBinding Light={StaticResource LightNavBar}, Dark={StaticResource DarkNavBar}}">
                <BoxView.Shadow>
                    <Shadow Brush="Red"
                            Radius="20"
                            Opacity="0.9"/>
                </BoxView.Shadow>
            </BoxView>

            <Button Grid.Row="0" Grid.Column="0" Padding="10,0" BackgroundColor="{AppThemeBinding Light={StaticResource LightNavBar}, Dark={StaticResource DarkNavBar}}" ImageSource="{AppThemeBinding Light=cross.png,Dark=search_dark.png}" Command="{Binding PopModalCommand}"/>
            <Label Grid.Row="0" Grid.Column="1" Padding="10,0" VerticalTextAlignment="Center" Text="Add Expense" FontSize="20" />
            <Button Grid.Row="0" Grid.Column="2" Padding="10,0" BackgroundColor="{AppThemeBinding Light={StaticResource LightNavBar}, Dark={StaticResource DarkNavBar}}" ImageSource="{AppThemeBinding Light=check1.png,Dark=check1_dark.png}" Command="{Binding SearchCommand}"/>

