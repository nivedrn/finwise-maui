            <VerticalStackLayout Margin="20,30" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                <Grid RowDefinitions="*,*,*" ColumnDefinitions="auto,*">
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Description" FontSize="12" />
                    <Entry Margin="0,5" Grid.Row="0" Grid.Column="1" HeightRequest="60" x:Name="activityDescription" Text="{Binding addActivityViewModel.activity.description}" Placeholder="Enter a description" MaxLength="100" />
                    <Label Margin="0,10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Amount" FontSize="12" />
                    <Entry Margin="0,10" Grid.Row="1" Grid.Column="1" HeightRequest="60" x:Name="activityAmount"  Text="{Binding addActivityViewModel.activity.amount}" Placeholder="0.00" Keyboard="Numeric" />
                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Activity Date" FontSize="12" />
                    <DatePicker Grid.Row="2" Grid.Column="1" HeightRequest="60" x:Name="activityDate" Date="{Binding addActivityViewModel.activity.activityDate}" />
                </Grid>
            </VerticalStackLayout>
            
