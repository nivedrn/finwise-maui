<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="finwise.maui.Views.ExpenseEditorPage"
             Title="ExpenseEditorPage"
             Shell.TabBarIsVisible="False"
             Shell.PresentationMode="ModalAnimated">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior x:Name="statusBar" StatusBarColor="{AppThemeBinding Light={StaticResource Cyan100Accent}, Dark={StaticResource DarkPageBG} }" StatusBarStyle="{ AppThemeBinding Light=DarkContent, Dark=LightContent }"/>
    </ContentPage.Behaviors>
    
    <VerticalStackLayout BackgroundColor="{AppThemeBinding Light={StaticResource LightBG}, Dark={StaticResource DarkPageBG}}">
        <Grid RowDefinitions="50,*,auto, auto" ColumnDefinitions="*">
            <FlexLayout JustifyContent="SpaceBetween" Grid.Row="0" >
                <Button Grid.Row="0" Grid.Column="0" Padding="10,0" BackgroundColor="{AppThemeBinding Light={StaticResource LightBG}, Dark={StaticResource DarkPageBG}}" ImageSource="{AppThemeBinding Light=arrow_left.png,Dark=arrow_left_dark.png}" Command="{Binding PopModalCommand}"/>
                <Label Grid.Row="0" Grid.Column="1" Padding="10,0" HorizontalOptions="Center" VerticalTextAlignment="Center" Text="{Binding Title}" FontSize="16" />
                <Button Grid.Row="0" Grid.Column="2" Padding="10,0" BackgroundColor="{AppThemeBinding Light={StaticResource LightBG}, Dark={StaticResource DarkPageBG}}" ImageSource="{AppThemeBinding Light=check1.png,Dark=check1_dark.png}" Command="{Binding SaveExpenseCommand}"/>
            </FlexLayout>

            <Frame Padding="35,20" Margin="10,0" CornerRadius="5" Grid.Row="1" BackgroundColor="{AppThemeBinding Light={StaticResource LightBG}, Dark={StaticResource DarkCardAltBG}}">
                <Grid RowDefinitions="auto,auto,auto,auto" ColumnDefinitions="*,*">
                    <FlexLayout HorizontalOptions="Start" Grid.Row="0" Grid.ColumnSpan="2">
                        <Image Source="{AppThemeBinding Light=receipts.png,Dark=receipts_dark.png}" Margin="0,10,0,0" VerticalOptions="Center" HeightRequest="30"/>
                        <VerticalStackLayout FlexLayout.Grow="1">
                            <Entry Margin="10,0,0,0" x:Name="expenseDescription" Text="{Binding ExpenseItem.description}" Placeholder="Enter a description" MaxLength="100" FontSize="Medium" TextColor="{AppThemeBinding Light={StaticResource LightBG}, Dark={StaticResource DarkTextContent}}" toolkit:SetFocusOnEntryCompletedBehavior.NextElement="{x:Reference expenseAmount}" />
                            <Label Margin="15,-6" Text="Description" FontSize="12" TextColor="{StaticResource DarkTextContent}" />
                        </VerticalStackLayout>
                    </FlexLayout>
                    <FlexLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10">
                        <Label Padding="5,0,10,0" Text="{Binding CurrentCurrencySymbol}" FontSize="30" TextColor="{AppThemeBinding Light={StaticResource LightBG}, Dark={StaticResource DarkTextHeader}}" Margin="0,10,0,0" HeightRequest="35"/>
                        <VerticalStackLayout FlexLayout.Grow="1" >
                            <Entry x:Name="expenseAmount" FontSize="Large" MinimumWidthRequest="80" Text="{Binding ExpenseItem.amount}" Placeholder="0.00" Keyboard="Numeric" TextColor="{AppThemeBinding Light={StaticResource LightBG}, Dark={StaticResource DarkTextContent}}"  toolkit:SetFocusOnEntryCompletedBehavior.NextElement="{x:Reference expenseCategoryPicker}"/>
                            <Label Margin="5,-6" Text="Amount" FontSize="12" TextColor="{StaticResource DarkTextContent}" />
                        </VerticalStackLayout>
                    </FlexLayout>
                    <FlexLayout Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10" JustifyContent="Start" VerticalOptions="Center">
                        <Image Source="{AppThemeBinding Light=tag.png,Dark=tag_dark.png}" Margin="0,10,0,0" VerticalOptions="Center" HeightRequest="30"/>
                        <VerticalStackLayout FlexLayout.Grow="1" >
                            <Picker x:Name="expenseCategoryPicker" Title="Select the category of the expense." SelectedIndexChanged="expenseCategoryPicker_SelectedIndexChanged">
                                <Picker.Items>
                                    <x:String>Entertainment</x:String>
                                    <x:String>Food and drink</x:String>
                                    <x:String>Home</x:String>
                                    <x:String>Life</x:String>
                                    <x:String>Transportation</x:String>
                                    <x:String>Utilities</x:String>
                                    <x:String>Others</x:String>
                                </Picker.Items>
                            </Picker>
                            <Label Margin="5,-6" Text="Category" FontSize="12" TextColor="{StaticResource DarkTextContent}" />
                        </VerticalStackLayout>
                    </FlexLayout>
                    <FlexLayout VerticalOptions="Center" Grid.Row="3" Grid.Column="0" Margin="0,10" JustifyContent="Start">
                        <Image Source="{AppThemeBinding Light=calendar.png,Dark=calendar_dark.png}" Margin="0,10,0,0" VerticalOptions="Center" HeightRequest="30"/>
                        <VerticalStackLayout>
                            <DatePicker x:Name="expenseDate" Date="{Binding ExpenseItem.expenseDate}" />
                            <Label Margin="5,-8" Text="Expense Date" FontSize="12" TextColor="{StaticResource DarkTextContent}" />
                        </VerticalStackLayout>
                    </FlexLayout>
                    <FlexLayout Grid.Row="3" Grid.Column="1" Margin="0,10" JustifyContent="End">
                        <Image Source="{AppThemeBinding Light=repeat.png,Dark=repeat_dark.png}" Margin="0,10,0,0" VerticalOptions="Center" HeightRequest="30"/>
                        <VerticalStackLayout>
                            <Picker x:Name="repeatExpensePicker" Title="Repeat Expense" WidthRequest="80" SelectedIndexChanged="repeatExpensePicker_SelectedIndexChanged">
                                <Picker.Items>
                                    <x:String>Off</x:String>
                                    <x:String>Weekly</x:String>
                                    <x:String>Monthly</x:String>
                                    <x:String>Yearly</x:String>
                                </Picker.Items>
                            </Picker>
                            <Label Margin="5,-8" Text="Repeat" FontSize="12" TextColor="{StaticResource DarkTextContent}" />
                        </VerticalStackLayout>
                    </FlexLayout>
                </Grid>
            </Frame>
            <HorizontalStackLayout Grid.Row="2" HorizontalOptions="Center" IsEnabled="{Binding ExpenseItem.isShared}" >
                <Label Text="Do you want to " FontSize="Small" VerticalOptions="Center"/>
                <Button x:Name="ShareExpense" Margin="10,10" CornerRadius="3" FontSize="Small" Padding="10,2,10,2" HorizontalOptions="Center" HeightRequest="30" Text="Split Expense" Clicked="ShareExpense_Clicked" TextColor="{AppThemeBinding Light={StaticResource LightText}, Dark={StaticResource DarkText}}" BackgroundColor="{AppThemeBinding Light={StaticResource Blue300Accent}, Dark={StaticResource DarkCardBG}}">
                    <Button.Shadow>
                        <Shadow Brush="{StaticResource DarkButtonGray}" 
                        Offset="0,5"
                        Radius="4"
                        Opacity="0.5"/>
                    </Button.Shadow>
                </Button>
                <Label Text=" with friends ?" FontSize="Small" VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Grid>


    </VerticalStackLayout>

</ContentPage>